{
  "schemaVersion": 1,
  "id": "mecha",
  "version": "${version}",

  "name": "MECHA",
  "description": "Multiple Entity Collision Hitbox API - A Fabric API that allows a custom entity to have multiple colliders",
  "authors": [
    "byteManiak"
  ],
  "contact": {
    "homepage": "https://modrinth.com/project/mecha-multiple-entity-collision-hitboxes-api-(fabric)",
    "sources": "https://github.com/byteManiak/mecha"
  },

  "license": "CC0-1.0",
  "icon": "assets/mecha/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.bytemaniak.mecha.Mecha"
    ],
    "client": [
      "com.bytemaniak.mecha.MechaClient"
    ]
  },
  "mixins": [
    "mecha.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.15.1",
    "fabric-api": "*",
    "minecraft": "1.20.x",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
